{
    "name": "@greenlightci/action",
    "version": "1.0.0",
    "description": "GitHub Action for Baseline web feature compatibility checking",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && ncc build dist/index.js -o dist",
        "dev": "tsc --watch",
        "test": "vitest",
        "lint": "eslint src/**/*.ts",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^5.1.1",
        "@greenlightci/shared": "workspace:*",
        "@octokit/rest": "^20.1.2",
        "parse-diff": "^0.11.1",
        "web-features": "^0.8.6"
    },
    "devDependencies": {
        "@vercel/ncc": "^0.38.4"
    },
    "keywords": [
        "github-action",
        "baseline",
        "web-features",
        "compatibility"
    ]
}